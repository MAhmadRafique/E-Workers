<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDBDB"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        tools:context=".ui.main.PlaceholderFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="2000dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/profile_back"
                    android:layout_width="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_height="90dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_admin"
                    />
                <TextView
                    android:id="@+id/jn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Name"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="2000dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="User Information"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#757575"
                    />



                <TextView
                    android:id="@+id/profile_tv_username_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:text="User Name"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/profile_tv_useremail_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Email"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold"  />

                <TextView
                    android:id="@+id/profile_tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>






        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="2000dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="Personal Information"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#757575"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:text="Name"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ehtisham Hafeez"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Phone Number"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/profile_tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="03XX-XXXXXXX"
                    android:textSize="16dp"     android:textColor="#757575"
                    android:background="@null"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
</ScrollView>