<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/job_request_layout"
    android:layout_width="340dp"
    android:background="@drawable/round_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">





        <ImageView
            android:id="@+id/ud_photo"
            android:layout_width="80dp"
            android:tint="@color/colorPrimary"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:layout_gravity="center"
            android:src="@drawable/symbol_user"
            />



    <TextView
        android:id="@+id/ud_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Full Name"
        android:textSize="20dp"
        android:textColor="@color/BlackText"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/round_fields2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="User Name: "
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ud_uName"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/round_fields2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Email: "
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ud_email"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/round_fields2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Wallet: "
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ud_wallet"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            />
    </LinearLayout>




    <Button
        android:layout_width="wrap_content"
        android:id="@+id/dialog_task_btn"
        android:width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Cancel"
        android:textColor="@color/ButtonText"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:layout_gravity="center_horizontal"
        />





</LinearLayout>