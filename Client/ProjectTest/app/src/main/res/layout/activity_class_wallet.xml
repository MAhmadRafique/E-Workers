<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ClassWallet">

    <TextView
        android:id="@+id/tv_currentBalance"
        android:layout_width="195dp"
        android:layout_height="108dp"
        android:gravity="center"
        android:text="Current Balance"
        android:textColor="@color/BlueButtons"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_currentBalance_Value"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:gravity="center"
        android:text="Balance"
        android:textColor="@color/BlueButtons"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/wallet_balance_input"
        android:layout_width="100dp"
        android:textSize="18dp"
        android:background="@drawable/round_tasks"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/wallet_btn_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:padding="10dp"
        android:textColor="@color/White"
        android:text="Deposit" />

    <Button
        android:id="@+id/wallet_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:background="@drawable/round_button"
        android:padding="10dp"
        android:textColor="@color/White"
        android:visibility="gone" />
</LinearLayout>