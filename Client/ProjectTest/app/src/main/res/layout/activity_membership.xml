<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ClassMembership">

    <TextView
        android:id="@+id/membership_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="@drawable/round_tasks"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Status" />

    <Button
        android:id="@+id/membership_btn_BuyMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Membership"
        android:padding="10dp"
        android:textColor="@color/White"
        android:background="@drawable/round_button"
        android:visibility="gone" />

    <EditText
        android:id="@+id/membership_balance_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:background="@drawable/round_tasks"
        android:visibility="gone" />

    <Button
        android:id="@+id/membership_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:padding="10dp"
        android:textColor="@color/White"
        android:background="@drawable/round_button"
        android:visibility="gone" />

</LinearLayout>